<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/grilla.css">
    <title>Productos</title>
</head>
<body>
    <header>
        <%- include('../partials/header.ejs') %>

        <%- include('../partials/nav-bar.ejs') %>
    </header>
    <main>

        <a href="/product/create" class="crearProducto"><button type="submit" class="crear-producto-usuario">Crear producto</button></a>
        <section>
            <div class="grilla">
                <% for(let i = 0; i < productos.length; i++) {%>
                <article>
                    <% if(!productos[i].imagen){%>
                        <a href="/products/<%= productos[i].id_producto %>" class="hiper-fotos"><img src="/img/popu-7.jpg" alt="Foto default" class='fotos-grilla'></a>
                    <%}else{%>
                        <a href="/products/<%= productos[i].id_producto %>" class="hiper-fotos"><img src="img/product/<%=productos[i].imagen%>" alt="Foto producto" class='fotos-grilla'></a>  
                    <%}%>
                    <div class="info-producto-grilla">
                        <br>
                        <div class="descripcion-grilla"><%= productos[i].nombre %></div>
                        <br>
                        <div class="precios-grilla">$ <%= productos[i].precio_unidad %></div>
                        <form action="/products/<%= productos[i].id_producto %>?_method=DELETE" method="POST"><button type="submit" class="borrar-producto-usuario"><i class="fa-regular fa-trash-can"></i></button></form>
                        <br>
                        <a href="/products/<%= productos[i].id_producto%>/edit" class="hiper-edit"><i class="fa-solid fa-pen-to-square"></i></a>
                    </div>
                    
                </article>
                <%}%>
            </div>
        </section>

        
    </main>
    <footer>
        <%- include('../partials/footer.ejs') %>
    </footer>
    
</body>
</html>